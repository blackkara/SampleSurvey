<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#AD2D45" />
            <gradient android:angle="-90" android:startColor="#F30303" android:endColor="#E8B3BC"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#F30303" />
            <solid android:color="#F30303"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#F30303" />
            <gradient android:angle="-90" android:startColor="#F30303" android:endColor="#F30303" />
        </shape>
    </item>
</selector>